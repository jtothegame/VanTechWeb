<div class="body-content">
<div class="container">

  <div class="">

  <div class="row">
      <div class="col m4">

        <p>Icon : </p><%= image_tag (@organization.icon_url), style:"max-width: 250px; margin:25px 5px 5px 5px;"%><br><br>
        <p>Header: </p><%= image_tag (@organization.header_url), style:"max-width: 250px; margin:25px 5px 5px 5px;"%>

      </div>
      <div class="col m8">
        <table class="bordered">
          <tr>
            <td><strong>Title: </strong></td>
            <td><%= @organization.name %></td>
          </tr>
          <tr>
            <td><strong>Address: </strong></td>
            <td><%= @organization.address %></td>
          </tr>
          <tr>
            <td><strong>Overview: </strong></td>
            <td><%= @organization.overview %></td>
          </tr>
          <tr>
            <td><strong>Employees size:</strong></td>
            <td><%= @organization.employees %></td>
          </tr>
          <tr>
            <td><strong>Tech team size: </strong></td>
            <td><%= @organization.teamsize %></td>
          </tr>
          <tr>
            <td><strong>Webstie: </strong></td>
            <td><%= @organization.website %></td>
          </tr>
          <tr>
            <td><strong>Twitter: </strong></td>
            <td><%= @organization.twitter %></td>
          </tr>
          <tr>
            <td><strong>Icon: </strong></td>
            <td><%= @organization.icon %></td>
          </tr>
          <tr>
            <td><strong>Header: </strong></td>
            <td><%= @organization.header %></td>
          </tr>
          <tr>
            <td><strong>Technology:</strong></td>
            <td>
              <% @organization.tags.each do |t| %>
              <div class="chip">
                <%= t.name %>
              </div>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  <div class="row right">
    <% if @organization.user == current_user %>
      <%= link_to "Edit Organization", edit_organization_path(@organization), class: "btn"%>
    <% end %>
  </div>

  <div style='width: 800px;'>
    <div id="map" style='width: 800px; height: 400px;'></div>
  </div>

  <script src="//maps.google.com/maps/api/js?key=<%=ENV['GOOGLE_MAPS_API_KEY'] %>"></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script>
    handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        var markers = handler.addMarkers([
          {
              "lat": <%= @organization.lat %>,
              "lng": <%= @organization.long %>,
              "picture": {
                  "url": "http://people.mozilla.com/~faaborg/files/shiretoko/firefoxIcon/firefox-32.png",
                  "width":  32,
                  "height": 32
              },
              "infowindow": "hello!"
          }
        ]);
        handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  </script>

  </div>

</div>
</div>
