<div class="body-content">
  <div class="container">

    <%= link_to "Add a New Organization", (new_organization_path), class: 'btn right disabled' %>
    <h1>Organization directory</h1>


  <div class="row">
    <div >
      <%= paginate @organizations %> <br><br>
    </div>


    <div class="row">
      <% @organizations.each do |o| %>


      <div class="col s12 m6">
        <a href="/organizations/<%= o.id %>">
        <div class="card horizontal hoverable">
          <div class="card-image" id='staggered'>


            <%= image_tag o.icon_url , class: 'brand-index-logo'%>

          </div>
          <div class="card-stacked">
            <div class="card-content">
              <div class="ellipsis">
                <h5><%= o.name %></h5>
                <p class='trunc'><%= o.overview %></p>
              </div>
            </div>

          </div>
        </div>

        </a>
      </div>
      <% end %>
    </div>

    <div >
      <%= paginate @organizations %> <br><br>
    </div>

  </div>
</div>
</div>
